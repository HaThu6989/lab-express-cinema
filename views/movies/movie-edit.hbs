<h2>Edit the movie : {{title}}</h2>

<form action="/movies/{{_id}}/edit" method="POST">
  <label> Title:
    <input type="text" name="title" value="{{title}}" />
  </label>
  <br> <br>
  <label> Director:
    <input type="text" name="author" value="{{director}}" />
  </label>
  <br> <br>
  <label> Stars:
    <textarea name="stars" cols="30" rows="4"> {{stars}} </textarea>
  </label>
  <br> <br>
  <label> Description:
    <textarea name="description" cols="30" rows="4">{{description}} </textarea>
  </label>
  <br> <br>
  <label> Showtimes:
    <input type="text" name="showtimes" value="{{showtimes}}" />
  </label>
  <br> <br>
  <button type="submit"> Edit </button>
</form>