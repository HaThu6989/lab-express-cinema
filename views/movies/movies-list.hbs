<h1>Ironhack Cinema</h1>
<p>Click on the movie to check the showtime</p>


<div class="container">

  <div class="row text-center d-flex justify-content-between align-items-stretch">

    {{#each movies}}
    <div class="card col-md-4" style="width: 18rem">

      <img class="card-img-top img-thumbnail" src="{{image}}" alt="">


      <div class="card-body">

        <h3 class="card-title">{{title}}</h3>

        <a href="/movies/{{_id}}" class=" btn btn-primary">See more </a>

      </div>

    </div>

    {{/each}}

  </div>

</div>